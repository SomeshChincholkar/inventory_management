<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Logs</title>
    <link rel="stylesheet" href="/css/products.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Basic styles for the suggestion dropdown */
      .suggestions {
        position: absolute;
        border: 1px solid #ccc;
        list-style: none;
        padding: 0;
        background-color: #fff;
        z-index: 1;
      }
      .suggestions li {
        padding: 5px;
        cursor: pointer;
      }
      .suggestions li:hover {
        background-color: #f0f0f0;
      }

      /* Style for highlighting search term */
      .highlight {
        background-color: yellow;
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <h1 class="text-center mb-4">Order Logs</h1>

      <!-- Flash Message -->
      <% if (messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= messages.success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <a href="/" class="btn btn-primary">Go to Dashboard</a>
          <a href="/orders" class="btn btn-primary">Go to Orders</a>
          <a href="/products/productlog" class="btn btn-primary">Open ProductLog</a>
        </div>
        <a href="/orders/add" class="btn btn-primary">Add New Order</a>
      </div>

      <h3>Order Logs</h3>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Log Id</th>
            <th>Order Id</th>
            <th>Username</th>
            <th>Action</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% logs.forEach(log => { %>
            <tr>
              <td><%= log.order_log_id %></td>
              <td><%= log.order_id %></td>
              <td><%= log.username %></td>
              <td><%= log.action %></td>
              <td><%= new Date(log.timestamp).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
